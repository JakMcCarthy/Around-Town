</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main class="myContainer">
    <% if (post.length > 0) {
      let i = itemCounterStartInCurrentPage;
      for (let post of posts) { %>
        <li class="myBox">
          <div class="myItem">          
              <p><%= i %></p>
            </div>
          <div class="myItem">
            <p> Posted by: </p>
            <p><%= post.userId.email %></p>
          </div>
          <div class="myItem">
            <p> On:</p>
            <p> <%= post.date %> </p>
          </div>

          <div class="myItem">
            <%= post.content %>
          </div>
          <% if (isAuthenticated && post.userId._id.toString() === currentUser._id.toString()) { %>
          <div class="myItem">
            <a href="/edit-post/<%= post._id %>?edit=true" class="btn">Edit</a>
          </div>
          <div class="myItem">
            <form action="delete-post" method="POST">
              <input type="hidden" value="<%= post._id %>" name="postId">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="myButtonThatLooksLikeLink" type="submit">Delete</button>
            </form>
            <% } %>
          </div>
        </li>
    <% i--; } %>

    <% } else { %>
    <p>No posts found.</p>
    <% } %>

    <%- include('../includes/pagination.ejs', paginationObject) %>

  </main>

  <%- include('../includes/bottom.ejs') %>